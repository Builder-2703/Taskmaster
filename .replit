run = "bash -c 'if [ ! -f repl.deploy ]; then curl -sL https://github.com/khrj/repl.deploy/releases/download/0.1.2/repl.deploy_linux_x86-64.tar.gz | tar xz && chmod +x repl.deploy; fi && ./repl.deploy npm start'"
modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React App"

[[workflows.workflow]]
name = "React App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "-s", "build", "-l", "0.0.0.0:5000"]
build = ["npm", "ci", "&&", "npm", "run", "build"]
